# SentinelX Environment Variables

# Session Security (Required)
SESSION_SECRET=change_this_to_a_random_secret_string

# Google OAuth
# Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
# Settings: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# LinkedIn OAuth
# Developers: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Port (Optional)
PORT=3000

# --- Real-Time Email OTP (Nodemailer) ---
# Use an App Password for Gmail (don't use your main password).
# EMAIL_HOST: 'smtp.gmail.com' for Gmail, 'smtp-mail.outlook.com' for Outlook.
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
